<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5"
   xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="
      http://java.sun.com/xml/ns/javaee
      http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

   <env-entry>
      <env-entry-name>resourceInjectionTestName</env-entry-name>
      <env-entry-type>java.lang.String</env-entry-type>
      <env-entry-value>Hello World from an env-entry</env-entry-value>
   </env-entry>

   <servlet>
      <servlet-name>GreeterServlet</servlet-name>
      <servlet-class>org.jboss.arquillian.container.wls.remote_10_3.GreeterServlet</servlet-class>
   </servlet>

   <servlet-mapping>
      <servlet-name>GreeterServlet</servlet-name>
      <url-pattern>/Greeter</url-pattern>
   </servlet-mapping>
   
   <ejb-local-ref>
        <ejb-ref-name>ejb/Greeter</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>org.jboss.arquillian.container.wls.remote_10_3.Greeter</local>
        <ejb-link>test.jar#GreeterBean</ejb-link>
   </ejb-local-ref>

</web-app>
